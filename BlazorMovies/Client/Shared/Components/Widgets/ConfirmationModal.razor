@if (IsVisible)
{
    <!-- This creates a dim effect on the background -->
    <div class="modal-backdrop show"></div>

    <div class="modal fade show" tabindex="-1" role="dialog" style="display: block">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button" class="close" data-dismiss="modal" @onclick="OnCancel" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @ChildContent
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="OnCancel" data-dismiss="modal">@CancelButtonLabel</button>
                    <button type="button" class="btn btn-primary" @onclick="OnConfirm">@ConfirmButtonLabel</button>
                </div>
            </div>
        </div>
    </div>
}


@code {

    [Parameter] public string Title { get; set; } = "Confirmation";
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public string ConfirmButtonLabel { get; set; } = "Yes";
    [Parameter] public string CancelButtonLabel { get; set; } = "No";
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback OnConfirm { get; set; }

    public bool IsVisible { get; set; } = false;

    public void Show() => IsVisible = true;
    public void Hide() => IsVisible = false;
    
}
